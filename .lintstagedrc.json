{
  "apps/builder/**/*.{ts,tsx,js,jsx}": [
    "prettier --write",
    "eslint --fix --config apps/builder/.eslintrc.json"
  ],
  "apps/edge-worker/**/*.ts": [
    "prettier --write",
    "eslint --fix --config apps/edge-worker/.eslintrc.json"
  ],
  "apps/api-go/**/*.go": [
    "cd apps/api-go && go fmt",
    "cd apps/api-go && go vet"
  ],
  "*.{json,md,yml,yaml}": [
    "prettier --write"
  ]
}

