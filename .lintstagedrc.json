{
  "apps/builder/**/*.{ts,tsx,js,jsx}": [
    "prettier --write",
    "cd apps/builder && eslint --fix"
  ],
  "apps/edge-worker/**/*.ts": [
    "prettier --write",
    "cd apps/edge-worker && eslint --fix"
  ],
  "apps/api-go/**/*.go": [
    "cd apps/api-go && go fmt",
    "cd apps/api-go && go vet"
  ],
  "*.{json,md,yml,yaml}": [
    "prettier --write"
  ]
}

