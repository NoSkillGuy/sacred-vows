project_id = "sacred-vows"
region     = "asia-south1"  # Mumbai, India
environment = "prod"

api_domain           = "api.sacredvows.io"
builder_domain       = "sacredvows.io"
published_base_domain = "sacredvows.io"

min_instances = 0
max_instances = 10
cpu          = "200m"  # 200 millicores (0.2 CPU) - cost optimized
memory       = "256Mi"  # Reduced memory for cost optimization
timeout_seconds = 300

google_client_id     = "your-google-client-id"
google_client_secret = "your-google-client-secret"

# Cloudflare Configuration
# Get your Account ID from: https://dash.cloudflare.com -> Select domain -> Right sidebar
cloudflare_account_id = "your-cloudflare-account-id"
cloudflare_zone_name  = "sacredvows.io"
cloudflare_api_subdomain = "api"  # DNS record name for API

# Get this from Google Cloud Run domain mapping:
# gcloud run domain-mappings describe api.sacredvows.io --region asia-south1 --project=sacred-vows
# Look for the "target" field (usually ghs.googlehosted.com or similar)
cloudflare_api_cname_target = "ghs.googlehosted.com"

# Optional Cloudflare settings
cloudflare_r2_bucket_name = "sacred-vows-published-prod"  # R2 bucket for published sites
cloudflare_r2_bucket_location = "APAC"  # Asia Pacific (matches asia-northeast1 region)
cloudflare_enable_worker_route = true
cloudflare_resolve_cache_ttl_seconds = "30"

